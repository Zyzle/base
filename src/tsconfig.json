{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../dist/",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true
  },
  "files": [
    "main.ts",
    "typings.d.ts",
    "app/+login/index.ts",
    "app/+login/login.component.ts",
    "app/+login/shared/index.ts",
    "app/base.component.ts",
    "app/environment.ts",
    "app/index.ts",
    "app/shared/index.ts"
  ],
  "filesGlob": [
    "main.ts",
    "typings.d.ts",
    "app/**/*.ts",
    "!app/**/*.spec.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
